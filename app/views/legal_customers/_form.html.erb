<%= simple_form_for object do |f| %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= LegalCustomer.model_name.human %>
    </h3>
  </div>
  <div class="box-body">
    <%= f.simple_fields_for :user do |user| %>
      <%= render 'shared/user_fields', f: user %>
    <% end %>

    <div class="row">
      <%= f.input :social_name, html5: true, wrapper_html: { class: 'col-lg-3' } %>
      <%= f.input :fantasy_name, html5: true, wrapper_html: { class: 'col-lg-3' } %>      
      <%= f.input :observation, html5: true, wrapper_html: { class: 'col-lg-3' } %>
    </div>
  </div>
</div>

<%= f.simple_fields_for :address do |address| %>
  <%= render 'shared/address_fields', f: address %>
<% end %>

<div class="box box-primary">
  <div class="box-footer">
    <%= link_to t('.back', default: t("helpers.links.back")), collaborators_path, class: 'btn btn-default'  %>
    <%= f.submit  t('.save', default: t("helpers.links.save")), class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
