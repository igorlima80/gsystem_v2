<%= simple_form_for object do |f| %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= Product.model_name.human %>
    </h3>
  </div>
  <div class="box-body">
   
    <div class="row">
      <%= f.input :description, html5: true, wrapper_html: { class: 'col-lg-3' } %>
      <%= f.input :canister, html5: true, wrapper_html: { class: 'col-lg-3' } %>
      <%= f.input :short_description, wrapper_html: { class: 'col-lg-3' } %>
      <%= f.input :code_anp, wrapper_html: { class: 'col-lg-3' } %>
      <%= f.association :ncm, label_method: :description, wrapper_html: { class: 'col-lg-3' } %>
      


    </div>
  </div>
</div>


<div class="box box-primary">
  <div class="box-footer">
    <%= link_to t('.back', default: t("helpers.links.back")), products_path, class: 'btn btn-default'  %>
    <%= f.submit  t('.save', default: t("helpers.links.save")), class: 'btn btn-primary' %>
  </div>
</div>
<% end %>